<!DOCTYPE html>
<html>
<head>
  <title>LFDay</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= nav_bar :static => :top, :brand => "Amigo Dulce", :responsive => true do %>
    <%= menu_group do %>
      <%= menu_item "Home", root_path %>
      <%= menu_item "Play", play_path %>
      <%= menu_item "Preference", preferences_path %>
      <%= menu_item "Sign In", new_user_session_path if !current_user %>
    <% end %>
    <% if current_user %>
      <%= menu_group :pull => :right do %>
          <%= drop_down current_user.email do %>
            <%= menu_item "Logout", destroy_user_session_path,:method => :delete %>
          <% end %>
      <% end %>
    <% end %>
<% end %>

<div class="container">
  <%= yield %>  
</div>

</body>
</html>
